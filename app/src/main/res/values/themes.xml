<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LokerApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/white</item>

    </style>

    <style name="Theme.LokerApp" parent="Base.Theme.LokerApp" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_animation</item>
        <item name="android:windowExitAnimation">@anim/slide_out_animation</item>

    </style>

    <!--  animasi bottom sheet dialog   -->
    <style name="BottomSheetAnim">
        <item name="android:windowEnterAnimation">@anim/anim_sheet_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_sheet_out_bottom</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="backgroundTint">@color/transparent</item>
    </style>



</resources>