<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginBottom="-50dp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_13sdp"
                android:src="@drawable/arrow_back"
                android:id="@+id/kembali"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:text="Detail Pekerjaan"
                android:textSize="@dimen/_16sdp"

                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv1">

        <LinearLayout
            android:id="@+id/layoutkedua"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/cv1">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/_13sdp"
                app:cardElevation="@dimen/_8sdp"
                app:strokeColor="@color/stroke"
                app:strokeWidth="@dimen/_2sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/logo_perusahaan_detail"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/logo" />



                    <TextView
                        android:id="@+id/nama_perusahaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/logo_perusahaan_detail"
                        android:text="Nama Perusahaan"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pekerjaan"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:layout_below="@+id/nama_perusahaan"
                        android:layout_toEndOf="@+id/logo_perusahaan_detail"
                        android:id="@+id/pekerjaan_det_data"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kategori"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"
                        android:layout_below="@+id/pekerjaan_det_data"
                        android:layout_toEndOf="@+id/logo_perusahaan_detail"
                        android:id="@+id/kategori_det_data"/>


                    <TextView
                        android:id="@+id/alamat_perusahaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/logo_perusahaan_detail"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:text="Alamat perusahaan"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/jam_kerja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/alamat_perusahaan"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:text="Full time - kerja lapangan"
                        android:textSize="@dimen/_11sdp" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>





            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="@dimen/_11sdp"
                app:cardElevation="@dimen/_8sdp"
                app:strokeColor="@color/stroke"
                app:strokeWidth="@dimen/_2sdp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diskripsi Pekerjaan"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_diskripsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:text="Isi diskripsi pekerjaan" />


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>





        </LinearLayout>


    </ScrollView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_43sdp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_2sdp">


            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:backgroundTint="@color/biru"
                android:fontFamily="@font/poppinssemibold"
                android:text="SIMPAN"
                android:textSize="@dimen/_17sdp"
                app:cornerRadius="@dimen/_5sdp"
                app:strokeColor="@color/grey"
                app:strokeWidth="@dimen/_3sdp"
                android:id="@+id/btnsimpan_det_pekerjaan">

            </com.google.android.material.button.MaterialButton>


            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_40sdp"
                android:backgroundTint="@color/biru"
                android:fontFamily="@font/poppinssemibold"
                android:text="LAMAR"
                android:textSize="@dimen/_17sdp"
                app:cornerRadius="@dimen/_5sdp"
                app:strokeColor="@color/hijau"
                app:strokeWidth="@dimen/_3sdp"
                android:id="@+id/lamar"

                >

            </com.google.android.material.button.MaterialButton>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>