<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="-50dp"
        android:background="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="Detail Pekerjaan"
                android:textSize="20sp"

                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv1"
        >
        <LinearLayout
            android:id="@+id/layoutkedua"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/cv1">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/stroke"
                app:strokeWidth="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/logo_perusahaan"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/logo" />

                    <TextView
                        android:id="@+id/nama_perusahaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/logo_perusahaan"
                        android:text="Nama Perusahaan"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/alamat_perusahaan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/logo_perusahaan"
                        android:layout_marginTop="5dp"
                        android:paddingStart="15dp"
                        android:text="Alamat perusahaan"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/jam_kerja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/alamat_perusahaan"
                        android:layout_marginTop="5dp"
                        android:paddingStart="15dp"
                        android:text="Full time - kerja lapangan"
                        android:textSize="15sp" />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/stroke"
                app:strokeWidth="2dp"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">


                    <TextView
                        android:id="@+id/tv_judul_pendidikan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:paddingStart="15dp"
                        android:text="Pendidikan"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_judul_pendidikan"
                        android:layout_marginBottom="20dp"
                        android:paddingStart="15dp"
                        android:text="pendidikan S1/D4"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_usia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title"
                        android:layout_marginTop="5dp"
                        android:paddingStart="15dp"
                        android:text="Usia"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_isi_usia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_usia"
                        android:layout_marginBottom="10dp"
                        android:paddingStart="15dp"
                        android:text="pendidikan S1/D4"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_jenis_kelamin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/tv_judul_pendidikan"
                        android:paddingStart="15dp"
                        android:text="Jenis Kelamin"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_isi_jk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_jenis_kelamin"
                        android:layout_marginStart="70dp"
                        android:layout_marginBottom="20dp"
                        android:layout_toRightOf="@+id/tv_title"
                        android:paddingStart="15dp"
                        android:text="Laki-Laki / Perempuan"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_pengalaman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_isi_jk"
                        android:layout_marginStart="125dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/tv_usia"
                        android:paddingStart="15dp"
                        android:text="Pengalaman"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_isi_pengalaman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_pengalaman"
                        android:layout_marginStart="70dp"
                        android:layout_marginBottom="20dp"
                        android:layout_toRightOf="@+id/tv_title"
                        android:paddingStart="15dp"
                        android:text="Frash Graduate/ 1 tahun"
                        android:textSize="10sp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp"
                app:strokeColor="@color/stroke"
                app:strokeWidth="2dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diskripsi Pekerjaan"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_diskripsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Isi diskripsi pekerjaan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kualifikasi / Syarat"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_kualifikasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="15dp"
                        android:text="Syarat yang harus terpenuhi " />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:id="@+id/tv_jadwal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hari kerja" />

                        <TextView
                            android:id="@+id/tv_isi_jadwal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_jadwal"
                            android:text="senin - jumat" />

                        <TextView
                            android:id="@+id/tv_jam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="234dp"
                            android:layout_toRightOf="@+id/tv_jadwal"
                            android:text="Jam Kerja" />

                        <TextView
                            android:id="@+id/tv_isi_jam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_jadwal"
                            android:layout_marginStart="200dp"
                            android:layout_toRightOf="@+id/tv_isi_jadwal"
                            android:text="08:00 - 15:00" />

                    </RelativeLayout>


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </ScrollView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="@color/red"

        app:layout_constraintBottom_toBottomOf="parent">


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>