<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrasi2"
    android:background="@drawable/bglogin"
    android:layout_marginBottom="-150dp">



    <ImageView
        android:layout_width="190dp"
        android:layout_height="180dp"
        android:src="@drawable/logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/logo"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" REGISTRASI "
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:textColor="@color/white"
        android:id="@+id/ucapan"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/ucapan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/layoutinput"
        android:padding="19dp"
        >




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nama lengkap"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_26sdp"
android:textColor="@color/black"
            android:paddingLeft="@dimen/_7sdp"
            android:textColorHint="@color/black"
            android:background="@drawable/shape"
            android:inputType="text"
            android:id="@+id/txtnama_lengkap"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no telpon"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_26sdp"
android:textColor="@color/black"
            android:paddingLeft="@dimen/_7sdp"
            android:textColorHint="@color/black"
            android:background="@drawable/shape"
            android:inputType="number"
            android:id="@+id/txtno_telp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alamat"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_27sdp"
android:textColor="@color/black"
            android:paddingLeft="@dimen/_7sdp"
            android:textColorHint="@color/black"
            android:background="@drawable/shape"
            android:inputType="text"
            android:id="@+id/txtalamat"
            />




    </LinearLayout>




    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/_140sdp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/layoutinput"
        android:id="@+id/btnregis2"
        android:text="Berikutnya"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnkembali2"
        android:layout_marginTop="@dimen/_2sdp"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/_7sdp"
        app:strokeColor="@color/white"
        app:strokeWidth="@dimen/_3sdp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        >

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/_140sdp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/layoutinput"
        android:id="@+id/btnkembali2"
        android:text="Kembali"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnregis2"
app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_2sdp"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/_7sdp"
        app:strokeColor="@color/white"
        app:strokeWidth="@dimen/_3sdp"
        style="@style/Widget.Material3.Button.OutlinedButton"
        >

    </com.google.android.material.button.MaterialButton>

</androidx.constraintlayout.widget.ConstraintLayout>