<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/stroke"
    android:backgroundTint="@color/biru">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="@dimen/_90sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        app:cardElevation="20dp"
        app:cardCornerRadius="8dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="13dp">


            <ImageView
                android:id="@+id/logo_perusahaan_lengkap2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />


            <TextView
                android:id="@+id/nama_peru_lengkap2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo_perusahaan_lengkap2"
                android:alpha="0.7"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="nama perusahaan"
                android:textSize="10sp"/>


            <TextView
                android:id="@+id/pekerjaan_lengkap2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/logo_perusahaan_lengkap2"
                android:layout_marginStart="@dimen/_10sdp"
                android:alpha="0.7"
                android:text="pekerjaan"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/kategori_lengkap2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pekerjaan_lengkap2"
                android:layout_toEndOf="@+id/logo_perusahaan_lengkap2"
                android:layout_marginStart="@dimen/_10sdp"
                android:alpha="0.7"
                android:text="kategori pekerjaan"
                android:textSize="10sp"
                android:layout_marginBottom="15dp"/>


            <ImageView
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_27sdp"
                android:src="@drawable/love_white"
                android:layout_toRightOf="@+id/pekerjaan_lengkap2"
                android:layout_alignTop="@+id/kategori_lengkap2"
                android:layout_marginStart="100dp"
                android:layout_marginTop="@dimen/_28sdp"
                android:id="@+id/btnsimpan2"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>