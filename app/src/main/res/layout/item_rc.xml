<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/stroke"
    android:backgroundTint="@color/biru">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        app:cardElevation="20dp"
        app:cardCornerRadius="8dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:paddingStart="13dp">


            <ImageView
                android:layout_marginLeft="@dimen/_minus5sdp"
                android:id="@+id/logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_simpan_home"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_alignTop="@+id/kategori"
                android:layout_toEndOf="@+id/logo"
                android:background="@drawable/love_white"
                android:layout_marginStart="@dimen/_70sdp"
                />


            <TextView
                android:id="@+id/nama_peru"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:alpha="0.7"
                android:textColor="@color/black"
                android:text="nama perusahaan"
                android:textSize="10sp"/>






            <TextView
                android:id="@+id/pekerjaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/logo"
                android:alpha="0.7"
                android:textColor="@color/black"
                android:text="pekerjaan"
                android:textSize="10sp"
                android:layout_marginStart="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/logo"
                android:textColor="@color/black"
                android:layout_below="@+id/pekerjaan"
                android:alpha="0.7"
                android:text="kategori pekerjaan"
                android:textSize="10sp"
                android:layout_marginStart="@dimen/_10sdp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>