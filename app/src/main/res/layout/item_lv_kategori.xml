<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_160sdp"
    android:background="@color/biru">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_260sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_22sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_8sdp">



            <ImageView
                android:id="@+id/logo_perusahaan_kategori"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_65sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pekerjaan_kategori"
                android:layout_toEndOf="@+id/logo_perusahaan_kategori"
                android:layout_marginStart="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/love_white"
                android:id="@+id/btn_simpan_kategori"/>



            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/kategori_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/logo_perusahaan_kategori"
                android:text="kategori"
                android:layout_marginBottom="@dimen/_3sdp">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/pekerjaan_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kategori_kategori"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/logo_perusahaan_kategori"
                android:text="pekerjaan"
                android:layout_marginBottom="@dimen/_3sdp">

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/nama_tempat_pekerjaan_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_below="@+id/logo_perusahaan_kategori"
                android:text="nama tempat pekerjaan">

            </com.google.android.material.textview.MaterialTextView>




        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>