<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lupa_password3"
    android:layout_marginBottom="-150dp"
    android:background="@drawable/bglogin">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lupa Sandi"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:textColor="@color/white"
        android:id="@+id/ucapan"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/ucapan">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sandi Baru"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="30dp"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/shape"
            android:hint="Masukan sandi baru"
            android:textColorHint="@color/black"
            android:paddingLeft="10dp"
            android:inputType="textEmailAddress"
            android:id="@+id/txtusername"
            android:drawableLeft="@drawable/person"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi Sandi"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="30dp"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:background="@drawable/shape"
            android:hint="Masukan konfirmasi sandi"
            android:textColorHint="@color/black"
            android:paddingLeft="10dp"
            android:inputType="textEmailAddress"
            android:id="@+id/txtkonfirmasisandi"
            android:drawableLeft="@drawable/person"
            android:layout_gravity="center"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:text="Login"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            app:cornerRadius="10dp"
            app:strokeColor="@color/white"
            app:strokeWidth="4dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:id="@+id/btnlogin"
            android:layout_gravity="center"
            >

        </com.google.android.material.button.MaterialButton>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>