<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lupa_password1"
    android:background="@drawable/bglogin"
    android:layout_marginBottom="-150dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/logo"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lupa Sandi"
        android:gravity="center"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:textColor="@color/white"
        android:id="@+id/ucapan"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/ucapan">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Email anda"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="30dp"
           />

        <EditText
            android:layout_width="@dimen/_273sdp"
            android:layout_height="@dimen/_37sdp"
            android:background="@drawable/shape"
            android:hint="Masukan Email"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/_9sdp"
            android:inputType="textEmailAddress"
            android:id="@+id/txtlp1email"
            android:drawableLeft="@drawable/person"
android:layout_gravity="center"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|top"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="Kembali"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_18sdp"
                android:textColor="@color/white"
                app:cornerRadius="@dimen/_7sdp"
                app:strokeColor="@color/white"
                app:strokeWidth="@dimen/_3sdp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:id="@+id/btnkembali"
                android:layout_marginEnd="@dimen/_28sdp"

                >

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="Lanjut"
                android:textSize="@dimen/_17sdp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_18sdp"
                android:textColor="@color/white"
                app:cornerRadius="@dimen/_7sdp"
                app:strokeColor="@color/white"
                app:strokeWidth="@dimen/_3sdp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:id="@+id/btnlp1mail"

                >

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>