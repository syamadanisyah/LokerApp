<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/stroke"
    android:backgroundTint="@color/biru">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/white"
        app:cardElevation="20dp"
        app:cardCornerRadius="8dp"


        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="13dp">


            <ImageView
                android:id="@+id/logo2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />


            <TextView
                android:id="@+id/nama_peru2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo2"
                android:alpha="0.7"
                android:text="nama perusahaan"
                android:textSize="10sp"/>


            <TextView
                android:id="@+id/alamat_peru2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama_peru2"
                android:alpha="0.7"
                android:text="alamat perusahaan"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/title_peru2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/alamat_peru2"
                android:alpha="0.7"
                android:text="pendidikan"
                android:textSize="10sp"
                android:layout_marginBottom="15dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like"
                android:layout_toRightOf="@+id/title_peru2"
                android:layout_alignTop="@+id/alamat_peru2"
                android:layout_marginStart="200dp"
                android:id="@+id/btnsimpan"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>